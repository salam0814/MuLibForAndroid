<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_save_dialog"
    android:padding="30dp"
    android:scrollbars="horizontal">

    <TextView
        android:id="@+id/tv_dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center" />


    <TextView
        android:id="@+id/tv_dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp">


        <Button
            android:id="@+id/btnDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/bg_btn_delete"
            android:clickable="true"
            android:text="取消"/>




        <Button
            android:id="@+id/btnDialogOk"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_btn_baocun"
            android:clickable="true"
            android:text="确认"/>


    </LinearLayout>





</LinearLayout>